<%- include('layout/doc_header') %>

    <link href="https://releases.transloadit.com/uppy/v3.15.0/uppy.min.css" rel="stylesheet" />

    <div class="container">
        <h3 class="mt-4">새 문서 등록</h3>
        <form class="mx-auto mt-4" action="/doc/add" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="Subject">제목</label>
                <input type="text" class="form-control" id="Subject" name="Subject" aria-describedby="subjectHelp"
                    placeholder="제목을 입력하세요." required />
                <small id="subjectHelp" class="form-text text-muted">최대 100자 이내로 특수 문자를 입력하실 수 없습니다.</small>
            </div>
            <div class="form-group mb-3">
                <label for="LastStatus">최종 상태</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="LastStatus" id="LastStatus1" value="상신" checked>
                    <label class="form-check-label" for="LastStatus1">
                        상신
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="LastStatus" id="LastStatus2" value="승인">
                    <label class="form-check-label" for="LastStatus2">
                        승인
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="LastStatus" id="LastStatus3" value="반려">
                    <label class="form-check-label" for="LastStatus3">
                        반려
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="LastStatus" id="LastStatus4" value="보류">
                    <label class="form-check-label" for="LastStatus4">
                        보류
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="WriteUserName">작성자명</label>
                <input type="text" class="form-control" id="WriteUserName" name="WriteUserName"
                    placeholder="작성자명을 입력하세요." required />
            </div>
            <div class="form-group mb-3">
                <label for="BodyDesc">문서내용</label>
                <textarea class="form-control" id="BodyDesc" name="BodyDesc" rows="3"></textarea>
            </div>
            <div class="form-group mb-3">
                <label for="Thumbnail" class="form-label">썸네일 이미지</label>
                <input class="form-control form-control-lg" type="file" id="Thumbnail" name="Thumbnail" required />
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">저장</button>
                <a class="btn btn-secondary" href="/">취소</a>
            </div>
        </form>
    </div>

    <%- include('layout/doc_footer') %>