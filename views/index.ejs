<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if(docs != ''){ %>
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th class="text-center">썸네일</th>
                            <th class="text-center">문서제목</th>
                            <th class="text-center">문서상태</th>
                            <th class="text-center">작성자명</th>
                            <th class="text-center">작성일자</th>
                            <th class="text-center">파일갯수</th>
                            <th class="text-center">기능</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% docs.forEach((row,index)=>{ %>
                        <tr class="align-middle">
                            <td><img src="<%= row.Thumbnail %>" width="50" class="img-thumbnail" alt=""></td>
                            <td class="font-weight-bold"><a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/view/<%=row._id%>"><%= row.Subject %></a></td>
                            <td><%= row.LastStatus %></td>
                            <td><%= row.WriteUserName %></td>
                            <td class="text-secondary"><%= moment(row.RegDate).add(9,'hours').format('MM-DD HH:mm') %></td>
                            <td><%= row.CntFiles %></td>
                            <td>
                                <a href="/edit/<%= row.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                <a href="/delete/<%= row.id %>" class="text-danger Trash"><i class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% }else{ %>
                    <h1 class="text-center text-secondary mt-5">No docs found in database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>